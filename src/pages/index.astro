---
import Layout from "@layouts/Layout.astro";
import PostList from "./_PostList.svelte";

let posts = await Astro.glob("./posts/*");
posts = posts.filter((post) => !post.frontmatter.draft);
---

<Layout title="" description="Ross Robino's Blog" keywords="blog, Ross, Robino">
	<h1 class="text-xl md:text-2xl">
		Hello, I'm <a href="https://robino.dev">Ross</a>, check out my posts below.
	</h1>
	<PostList posts={posts} />
</Layout>
